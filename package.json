{
	"name": "minifier",
	"displayName": "Minifier",
	"description": "Minify your files (HTML, CSS, JavaScript and JSON support)",
	"publisher": "Halpe",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:minifier.minify",
		"onLanguage:html",
		"onLanguage:css",
		"onLanguage:javascript",
		"onLanguage:json"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "minifier.minify",
				"title": "Minify: Document"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "resourceLangId == html || resourceLangId == javascript || resourceLangId == css || resourceLangId == json",
					"command": "minifier.minify",
					"group": "Minifier@1"
				}
			],
			"editor/context": [
				{
					"when": "resourceLangId == html || resourceLangId == javascript || resourceLangId == css || resourceLangId == json",
					"command": "minifier.minify",
					"group": "Minifier@1"
				}
			]
		},
		"configuration": {
			"title": "Minifier",
			"properties": {
				"minifier.minifyonsave": {
					"type": "boolean",
					"default": false,
					"description": "Update your minified file on save."
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.63.0",
		"@vscode/test-electron": "^2.0.3",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.5.4"
	},
	"dependencies": {
		"request": "^2.88.2"
	}
}